<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .affix {
            top: 0;
            width: 100%;
            z-index: 9999 !important;
        }

            .affix + .container-fluid {
                padding-top: 70px;
            }

        #footer {
            background-color: #00A2E8
        }

        #tituloFooter {
            font-size: 20px;
            text-decoration-line: underline;
            text-decoration-color: yellow;
        }

        .imagenes {
            padding-top: 30px;
            text-align: center;
            padding-bottom: 30px;
        }
    </style>

</head>
<body>

    <div style="background-color: #00A2E8">
        <img src="~/Content/images/logo.png" class="img-responsive" style="width:30%;">
    </div>
    <div class="navbar navbar-inverse " data-spy="affix" data-offset-top="200">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("POP-Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Catalogo", "Catalogo", "Catalogo")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="">
        <div class="container-fluid">
            <div class="row">

                @Html.Partial("MenuLateral")
                <div class=" col-sm-9 ">
                    @RenderBody()
                </div>
            </div>
        </div>
                <hr />
    

            </div>
            <footer class="page-footer font-small blue pt-4">
                <div id="footer" class="container-fluid text-center text-md-left">
                    <div class="row">
                        <div class="col-md-3 mt-md-0 mt-3">
                            <h5 class="text-uppercase">Aviso legal</h5>
                            <p id="tituloFooter">Política de privacidad</p>
                        </div>
                        <div class="col-md-3 mb-md-0 mb-3">

                            <h5 class="text-uppercase">Contáctanos</h5>
                            <p>funko.pop.shop@gmail.com</p>
                            <p>916530986</p>
                        </div>
                        <div class="col-md-3 mb-md-0 mb-3">
                            <div class="col-lg-3">
                                <p>(Redes sociales)</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-md-0 mb-3">
                            <div class="col-lg-3">
                                <p id="tituloFooter">Dónde estamos</p>
                                <div>
                                    <img src="https://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%"
                                         alt="Image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-copyright text-center py-3">
                    © 2019 Copyright:
                    <a href=""> PopShop- DAW2</a>
                </div>

            </footer>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
</body>
</html>
